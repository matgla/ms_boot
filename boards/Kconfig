menu "Hardware Platform configuration"

choice
    prompt "MCU Family: "
    default FAMILY_RASPBERRY_PICO

    config FAMILY_RASPBERRY_PICO
    bool "Raspberry PICO"
    help
        Enable support for Raspberry PICO.

endchoice

config BOARD
    string

choice
    prompt "Board Selection"

source "$(BOARD_DIR)/*.kconfig"

endchoice

source "$(BOARD_DIR)/*.defaults"

endmenu
